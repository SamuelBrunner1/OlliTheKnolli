---
import "../styles/global.css";
---

<html lang="de">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Olli The Knolli</title>
  </head>
  <body class="bg-gray-50 text-gray-900 font-sans">
    
    <!-- Section 1: Über uns -->
    <section class="min-h-screen flex flex-col justify-center items-center bg-white px-4 py-16">
      <h1 class="text-4xl font-bold mb-6 text-center">Willkommen bei Olli The Knolli</h1>
      <p class="text-center max-w-xl mb-10 text-lg text-gray-600">
        Wir sind dein Knollen-Team aus Leidenschaft. Nachhaltig. Lecker. Und manchmal verrückt.
      </p>
      <img src="https://via.placeholder.com/400x300" alt="Über uns Bild" class="rounded-lg shadow-lg" />
    </section>

    <!-- Section 2: Produkte -->
    <section class="bg-gray-100 px-6 py-20">
      <h2 class="text-3xl font-bold text-center mb-12">Unsere Produkte</h2>
      
      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-10 max-w-6xl mx-auto">
        
        <!-- Produkt 1 -->
        <div class="bg-white p-6 rounded-xl shadow hover:shadow-lg transition">
          <img src="https://via.placeholder.com/300x200" alt="Produkt 1" class="mb-4 rounded" />
          <h3 class="text-xl font-semibold mb-2">Knolli Klassik</h3>
          <p class="text-gray-700">€3,99</p>
        </div>
        
        <!-- Produkt 2 -->
        <div class="bg-white p-6 rounded-xl shadow hover:shadow-lg transition">
          <img src="https://via.placeholder.com/300x200" alt="Produkt 2" class="mb-4 rounded" />
          <h3 class="text-xl font-semibold mb-2">Knolli Schoko</h3>
          <p class="text-gray-700">€4,49</p>
        </div>

        <!-- Produkt 3 -->
        <div class="bg-white p-6 rounded-xl shadow hover:shadow-lg transition">
          <img src="https://via.placeholder.com/300x200" alt="Produkt 3" class="mb-4 rounded" />
          <h3 class="text-xl font-semibold mb-2">Knolli Surprise</h3>
          <p class="text-gray-700">€5,99</p>
        </div>

      </div>
    </section>

  </body>
</html>
