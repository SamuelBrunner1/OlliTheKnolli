---
import "../styles/global.css";
---

<html lang="de">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Olli The Knolli</title>
  </head>
  <body>
    
    <!-- SECTION 1: Über uns -->
    <section class="min-h-screen flex flex-col justify-center items-center bg-purple-900 text-white px-6 py-24">
      <h1 class="text-5xl font-extrabold mb-6 text-center">Willkommen bei Olli The Knolli</h1>
      <p class="text-xl mb-10 text-center max-w-2xl text-purple-100">
        Wir sind mehr als nur Knollen. Wir sind Leidenschaft, Stil und Geschmack.
      </p>
      <img 
        src="https://via.placeholder.com/500x350.png?text=Über+uns" 
        alt="Über uns Bild" 
        class="rounded-lg shadow-2xl border-4 border-purple-700" 
      />
    </section>

    <!-- SECTION 2: Produkte -->
    <section class="bg-gray-100 px-6 py-20">
      <h2 class="text-4xl font-bold text-center text-purple-800 mb-12">Unsere Kreationen</h2>
      
      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-10 max-w-6xl mx-auto">
        
        <!-- Produkt 1 -->
        <div class="bg-white p-6 rounded-xl shadow-lg hover:shadow-2xl transition">
          <img src="https://via.placeholder.com/300x200.png?text=Produkt+1" alt="Produkt 1" class="mb-4 rounded-lg border border-purple-200" />
          <h3 class="text-xl font-semibold text-purple-700 mb-1">Knolli Klassik</h3>
          <p class="text-gray-700">€3,99</p>
        </div>
        
        <!-- Produkt 2 -->
        <div class="bg-white p-6 rounded-xl shadow-lg hover:shadow-2xl transition">
          <img src="https://via.placeholder.com/300x200.png?text=Produkt+2" alt="Produkt 2" class="mb-4 rounded-lg border border-purple-200" />
          <h3 class="text-xl font-semibold text-purple-700 mb-1">Knolli Velvet</h3>
          <p class="text-gray-700">€4,49</p>
        </div>

        <!-- Produkt 3 -->
        <div class="bg-white p-6 rounded-xl shadow-lg hover:shadow-2xl transition">
          <img src="https://via.placeholder.com/300x200.png?text=Produkt+3" alt="Produkt 3" class="mb-4 rounded-lg border border-purple-200" />
          <h3 class="text-xl font-semibold text-purple-700 mb-1">Knolli Deluxe</h3>
          <p class="text-gray-700">€5,99</p>
        </div>

      </div>
    </section>

  </body>
</html>
